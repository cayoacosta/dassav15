<?xml version="1.0"?>
<odoo>

  <record id="view_form_ubicacion_category" model="ir.ui.view">
    <field name="name">ubicacion category Form</field>
    <field name="model">ubicacion.category</field>
    <field name="arch" type="xml">
    <form string="ubicacion">
    <sheet>
          <group>
            <group>
            <field name="name" />
            <field name="parent_id"/>
            </group>
          </group>
    </sheet>
    </form>
    </field>
  </record>

<record id="view_tree_ubicacion_category" model="ir.ui.view">
  <field name="name">ubicacion category List</field>
  <field name="model">ubicacion.category</field>
  <field name="arch" type="xml">
    <tree>
      <field name="name" />
      <field name="parent_id"/>
    </tree>
  </field>
</record>

  <record id="view_search_ubicacion_category" model="ir.ui.view">
    <field name="name">ubicacion category Filters</field>
    <field name="model">ubicacion.category</field>
    <field name="arch" type="xml">
      <search>
        <field name="name"/>
        <field name="parent_id"/>
      </search>
    </field>
  </record>

</odoo>
